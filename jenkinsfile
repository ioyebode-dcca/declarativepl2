pipeline {
	agent any
	stages {
		stage ('one') {
			steps {
			checkout scm
			}
		}
		stage ('two') {
			steps {
				input('impl, dev, test?')
			}
		}
		stage ('three') {
			steps {
			echo 'Staging area verified'
			}
			
		}
		stage ('four') {
			steps {
			echo 'successful!'
			}
		}
		stage('verify tools') {
			parallel {
				stage('Verify Git') {
					steps {
					sh 'git --version'
					}
				}
				stage('maven verify') {
					steps {
					echo 'mvn -v'
					}
				}
				stage('Junit Test') {
					steps {
					echo 'performing Junit test'
					}
				}
				
				stage('ansible verify') {
				    steps {
					sh 'ansible --version'
					}
				}
				
				stage('Selenium Test') {
					steps {
					echo 'performing Selenium testing'
					}
				}
				stage('UFT TESTING') {
					steps {
					echo 'uft successfully'
					}
				}
			}
		}
		// Run terraform init
		stage ('terraform') {
		  env.PATH += ":/usr/local/bin/"
		    withCredentials([[
		      $class: 'AmazonWebServicesCredentialsBinding',
                      credentialsId: credentialsId,
		      accessKeyVariable: 'AWS_ACCESS_KEY_ID',
		      secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
		    ]]) {
		      ansiColor('xterm') {
			sh 'terraform init'
		      }
		    }
		}
		
		stage ('five') {
			steps {
				input('Is test deployment okay?')
			}
		}
		stage ('Check system runtime') {
			steps {
			sh 'uptime'
			sh 'env'	
			}
		}

	}
}
